<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finagradient"
    android:id="@+id/main"
    android:orientation="vertical"
    tools:mcontext=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/ll2"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sky"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/monoton"
            android:gravity="right"
            android:layout_marginLeft="30dp"
            android:text="Care"
            android:textColor="#3591C3"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/chate"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/monoton"
            android:gravity="right"
            android:text="Zone"
            android:textColor="#FFFFFF"
            android:textSize="50dp"
            android:textStyle="bold"
            android:translationX="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/ll1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/delius_swash_caps"
            android:gravity="center"
            android:text="Let's Get Started"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:id="@+id/gif"
            android:layout_height="match_parent"
            android:src="@drawable/jik"
            />



    </LinearLayout>

    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:ael_expanded="false"
        android:layout_gravity="center"
        android:background="@drawable/invert_custom"
        android:id="@+id/out"
        app:ael_duration="500"
        app:ael_interpolator="linear"
        app:ael_orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="5dp"
                android:id="@+id/login"
                android:textColor="@android:color/white"
                android:layout_marginLeft="37dp"
                android:background="#000001"
                android:text="Login" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@android:color/white"
                android:padding="5dp"
                android:id="@+id/button_register"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:background="#3590C2"
                />

        </LinearLayout>


    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll3"
        android:orientation="vertical">








