<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/medicine_fragment2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".FirstActivity">

    <ImageView
        android:id="@+id/addButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/plus_mega"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re" />

    <LinearLayout
        android:id="@+id/relativeDates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <RelativeLayout
            android:id="@+id/c1"
            android:layout_width="62dp"
            android:layout_height="70dp"
            android:layout_marginEnd="28dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center">

            <TextView
                android:id="@+id/c2date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/coustard"
                android:textColor="#13034F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c2week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/c2date"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/abhaya_libre"
                android:textColor="#13034F"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/c2"
            android:layout_width="62dp"
            android:layout_height="90dp"
            android:layout_marginEnd="28dp"
            android:layout_weight="1"
            android:background="@drawable/newbr"
            android:gravity="center">

            <TextView
                android:id="@+id/c1date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/coustard"
                android:text="08"
                android:textColor="#13034F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c1week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/c1date"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/abhaya_libre"
                android:text="thu"
                android:textColor="#13034F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/monthcur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/c1week"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/fresca"
                android:text="Jul"
                android:textColor="#605F5D"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/c3"
            android:layout_width="62dp"
            android:layout_height="70dp"

            android:layout_marginEnd="28dp"
            android:layout_toRightOf="@id/c2"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center">

            <TextView
                android:id="@+id/c3date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/coustard"
                android:text="09"
                android:textColor="#13034F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c3week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/c3date"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/abhaya_libre"
                android:text="fri"
                android:textColor="#13034F"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/c4"
            android:layout_width="62dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center">

            <TextView
                android:id="@+id/c4date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/coustard"
                android:text="10"
                android:textColor="#13034F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c4week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/c4date"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/abhaya_libre"
                android:text="sat"
                android:textColor="#13034F"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/relativeDates">

        <LinearLayout
            android:id="@+id/layoutToday"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="5">


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.9"
                android:fontFamily="@font/magra"
                android:text="Today"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@drawable/ic_baseline_calendar_today_24" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyle"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:layout_below="@id/layoutToday"
            tools:listitem="@layout/medicine_pills" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginBottom="3dp"
        android:background="#13034F"
        android:padding="40dp"

        app:layout_constraintBottom_toTopOf="@+id/relativeDates"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/good_morning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gfs_neohelleni"
                android:text="Get Well Soon"
                android:textColor="#FFF"
                android:textSize="28dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/good_morning"
                android:fontFamily="@font/gfs_neohellenic_bold"
                android:text="Dannie"
                android:id="@+id/profile_name"
                android:textColor="#FFF"
                android:textSize="35dp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:id="@+id/profile_pic"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/male_pic" />
        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
