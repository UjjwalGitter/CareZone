<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".AboutMe">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="365dp"
        android:layout_marginBottom="685dp"
        android:background="@drawable/backk"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="317dp"
        android:fontFamily="@font/actor"
        android:text="Submitted to"
        android:textColor="#3A3A3A"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton" />
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_marginTop="80dp">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/brawler"
            android:text="Dr.Dip Prakash Samajdar"
            android:textColor="#000"
            android:textSize="20sp" />



        <androidx.cardview.widget.CardView
            android:id="@+id/stackcard"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            app:cardCornerRadius="4dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="60dp"
            app:cardBackgroundColor="#FFF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/facebook_url"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
android:id="@+id/linkedIn_url"
                    android:layout_margin="10dp"
                    android:src="@drawable/linkedin" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
        android:id="@+id/twitter_url"
                    android:layout_margin="10dp"
                    android:src="@drawable/twitter" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/phone_call"
                    android:layout_margin="10dp"
                    android:src="@drawable/call" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/email_url"
                    android:layout_margin="10dp"
                    android:src="@drawable/mail" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/stackcard"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="15dp">

                <RelativeLayout
                    android:id="@+id/fb"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Designation"
                        android:textColor="#000"
                        android:id="@+id/desigs"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/desigs"
                        android:layout_centerVertical="true"
                        android:text=": Assistant Professor"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fb"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Address"
                        android:textColor="#000"
                        android:id="@+id/addre"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/addre"
                        android:layout_centerVertical="true"
                        android:text=": IIITDMJ Jabalpur"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/linked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/twitter"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Telephone"
                        android:textColor="#000"
                        android:id="@+id/tele"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=": +91-761-2794474"
                        android:textColor="#000"
                        android:layout_toEndOf="@+id/tele"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linked"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Email"
                        android:textColor="#000"
        android:id="@+id/email"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=": dip.samajdar@iiitdmj.ac.in"
                        android:layout_toEndOf="@+id/email"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Department"
                        android:textColor="#000"
                        android:id="@+id/dpt"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=": ECE"
                        android:layout_toEndOf="@+id/dpt"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic"
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pic"
            app:civ_border_color="#0288D1"
            app:civ_border_width="1dp" />

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginHorizontal="25dp"
    android:layout_alignParentBottom="true"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    android:layout_height="50dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:text="PR 301"
        android:textStyle="bold"
        android:gravity="center"
        />
</androidx.cardview.widget.CardView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>